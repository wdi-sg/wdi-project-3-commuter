<%= render "partials/nav/interest_nav"%>

<!-- add div container by arif -->

<div class="interest-container">

  <section id="all-interest" class="section">
    <div class="container">
      <div class="columns">
        <% @all_interests.each do |interest| %>
        <div class="column">
          <p class="notification is-info">

            Interest Category: <%= interest.interest_category%><br>
            Interest: <%= interest.interest %><br>

              <%= link_to "Add to My Profile",  interest_register_path(interest.id), method: :post , class: "button is-primary" %><br /><br />
          </p>
        </div>
        <% end %>
      </div>
    </div>
  </section>

</div>
