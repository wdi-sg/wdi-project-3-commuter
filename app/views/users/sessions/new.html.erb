<%= render "partials/nav/login_nav"%>

<div class="login-container">

  <div class="row" style="margin-top:20px">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <!-- start form -->
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <fieldset>

        <h2>Please Sign In</h2>

        <hr class="colorgraph">
        <!-- email -->
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: "form-control input-lg", id:"email" %>
        </div>
        <!-- password -->
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password!!!", class: "form-control input-lg", id: "password" %>
        </div>

        <% if devise_mapping.rememberable? -%>

        <span class="button-checkbox">
          <button type="button" class="btn" data-color="info">Remember Me</button>

          <%= f.check_box :remember_me, id: "remember_me",
            checked: "checked", class: "hidden" %>

          <a href="/users/password/new" class="btn btn-link pull-right">Forgot Password?</a>
        </span>

        <% end -%>

        <hr class="colorgraph">

        <div class="row">
          <!-- signin btn -->
          <div class="col-xs-6 col-sm-6 col-md-6">
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block", value: "Sign In" %>
            </div>
          </div>

          <% end %>
          <!-- end form -->

          <!-- SignUp -->
          <div class="col-xs-6 col-sm-6 col-md-6">
            <a href="/users/sign_up" class="btn btn-lg btn-primary btn-block">Sign Up</a>
          </div>

        </div>
      </fieldset>
    </div>
  </div>
  <%= render "devise/shared/links" %>

</div>
